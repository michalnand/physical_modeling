set   autoscale                        # scale axes automatically
unset log                              # remove any log-scaling
unset label                            # remove any previous labels
set xtic auto                         	# set xtics automatically
set ytic auto                         # set ytics automatically
set ztic auto


set grid ytics lt 0.1 lw 0.1 lc rgb "#bbbbbb"
set grid xtics lt 0.1 lw 0.1 lc rgb "#bbbbbb"

#set terminal png size 2048,1356 enhanced font "Helvetica,20"
set terminal png size 1920,1080 enhanced font "Helvetica,20"

set key right top

# set style fill solid 1.0



set xlabel "iteration"
set ylabel "distance"

set output 'compared_accumulated_distance.png'
plot 'compared_accumulated_distance.log' using 1:2 notitle lt rgb 'red' lw 2 with lines


set xlabel "x[0]"
set ylabel "x[1]"
set zlabel "x[2]"

set output 'trajectory.png'
splot 'target_trajectory.log' using 2:3:4 title 'target' with lines lt rgb 'red' lw 2, \
'resulted_trajectory.log' using 2:3:4 title 'resulted' with lines lt rgb 'blue' lw 2, \



set xlabel "value"
set ylabel "relative count"

set output 'compared_h_distance.png'
plot 'compared_h_distance.log' using 2:4 notitle lt rgb 'red' lw 2 with boxes

set output 'compared_h_error.png'
plot 'compared_h_error.log' using 2:4 notitle lt rgb 'red' lw 2 with boxes


set output 'compared_h_values.png'
plot 'compared_h_target.log' using 2:4 title 'target' lt rgb 'red' lw 3.0 with boxes, \
     'compared_h_resulted.log' using 2:4 title 'resulted' lt rgb 'blue' lw 2 with boxes
